{
    "doctype": "DocType",
    "name": "Employee Investment Declaration",
    "module": "Hrms Customization",
    "is_submittable": 1,
    "fields": [
        {
            "fieldname": "employee", 
            "label": "Employee", 
            "fieldtype": "Link", 
            "options": "Employee", 
            "reqd": 1
        },
        {
            "fieldname": "employee_name", 
            "label": "Employee Name", 
            "fieldtype": "Data", 
            "fetch_from": "employee.employee_name",
            "read_only": 1
        },
        {
            "fieldname": "financial_year", 
            "label": "Financial Year", 
            "fieldtype": "Data", 
            "reqd": 1,
            "default": "2024-2025"
        },
        {
            "fieldname": "company", 
            "label": "Company", 
            "fieldtype": "Link", 
            "options": "Company",
            "reqd": 1
        },
        
        {
            "fieldname": "sb_80c", 
            "label": "Section 80C Investments (Max: ₹1,50,000)", 
            "fieldtype": "Section Break"
        },
        {
            "fieldname": "section_80c_investments", 
            "label": "80C Investments", 
            "fieldtype": "Table", 
            "options": "Investment Detail 80C"
        },
        {
            "fieldname": "total_80c", 
            "label": "Total 80C Investment", 
            "fieldtype": "Currency", 
            "read_only": 1
        },
        {
            "fieldname": "cb_80c", 
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "remaining_80c", 
            "label": "Remaining 80C Limit", 
            "fieldtype": "Currency", 
            "read_only": 1,
            "formula": "150000 - total_80c"
        },        
        {
            "fieldname": "sb_80d", 
            "label": "Section 80D Medical Insurance (Max: ₹1,00,000)", 
            "fieldtype": "Section Break"
        },
        {
            "fieldname": "section_80d_investments", 
            "label": "80D Medical Insurance", 
            "fieldtype": "Table", 
            "options": "Investment Detail 80D"
        },
        {
            "fieldname": "total_80d", 
            "label": "Total 80D Investment", 
            "fieldtype": "Currency", 
            "read_only": 1
        },
        {
            "fieldname": "cb_80d", 
            "fieldtype": "Column Break"
        },
        {
            "fieldname": "remaining_80d", 
            "label": "Remaining 80D Limit", 
            "fieldtype": "Currency", 
            "read_only": 1,
            "formula": "100000 - total_80d"
        },
        
        {
            "fieldname": "sb_other", 
            "label": "Other Exemptions and Deductions", 
            "fieldtype": "Section Break"
        },
        {
            "fieldname": "other_exemptions", 
            "label": "Other Exemptions", 
            "fieldtype": "Table", 
            "options": "Other Exemption Detail"
        },
        {
            "fieldname": "total_other", 
            "label": "Total Other Exemptions", 
            "fieldtype": "Currency", 
            "read_only": 1
        },
        
        {
            "fieldname": "sb_totals", 
            "label": "Total Declaration Summary", 
            "fieldtype": "Section Break"
        },
        {
            "fieldname": "total_exemption", 
            "label": "Total Tax Exemption", 
            "fieldtype": "Currency", 
            "read_only": 1,
            "formula": "total_80c + total_80d + total_other"
        },
        {
            "fieldname": "status", 
            "label": "Status", 
            "fieldtype": "Select", 
            "options": "Draft\nSubmitted\nApproved\nRejected",
            "default": "Draft"
        }
    ],
    "permissions": [
        {
            "role": "Employee", 
            "read": 1, 
            "write": 1, 
            "create": 1,
            "submit": 1,
            "cancel": 0,
            "delete": 0
        },
        {
            "role": "HR Manager", 
            "read": 1, 
            "write": 1, 
            "create": 1, 
            "delete": 1,
            "submit": 1,
            "cancel": 1,
            "approve": 1
        },
        {
            "role": "Payroll Manager", 
            "read": 1, 
            "write": 0, 
            "create": 0
        }
    ]
}